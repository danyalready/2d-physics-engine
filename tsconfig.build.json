{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/main.ts", "node_modules", "dist"]
}
